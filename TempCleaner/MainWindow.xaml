<Window x:Class="TempCleanner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TempCleaner"
        mc:Ignorable="d"
        Title="TempCleaner" Height="450" Width="800" ResizeMode="NoResize" Icon="icon.png" Cursor="UpArrow" Background="Black" BorderThickness="5">
    <Grid>
        <Button x:Name="CleanButton" Content="CLEAN" Height="180" 
                Margin="146,194,148,47" VerticalAlignment="Center" HorizontalAlignment="Center"
                Width="500" FontSize="90" Click="CleanButton_Click" Background="DarkGray" Foreground="White"/>
        
        <Label x:Name="State" Content ="{Binding Path = PathState}"  
               HorizontalAlignment="Left" Margin="146,47,0,0" VerticalAlignment="Top" Height="124" Width="500" 
               FontSize="72" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White"/>
    </Grid>
</Window>
